{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./src/type"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "files": [
    "./src/type/express.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
